@model Lab08.Models.Doctor

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.hospital.hospital_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hospital.hospital_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.doctor_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.doctor_name)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.doctorID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<div class="add-new-patient">
    @using (Html.BeginForm("AddPatientToDoctor", "Doctors", FormMethod.Get))
    {
        @Html.Hidden("ID", Model.doctorID)
        <button type="submit">Add New Patient!</button>
    }
</div>

<ul>
    @foreach (var patient in Model.Patients)
    {
        <li>@Html.ActionLink(patient.patient_name, "Details", "Patients", new { ID = patient.patientID }, null)</li>
    }
</ul>
