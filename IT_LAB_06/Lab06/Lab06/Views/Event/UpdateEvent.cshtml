@model Lab06.Models.EventModel

@{
    ViewBag.Title = "UpdateView";
}

<h2 style="color:darkblue; font-weight:bold; font-style:italic">Update Event</h2>

@using (Html.BeginForm("UpdateEvent", "Event"))
{
    <div class="mt-2" style="color:darkblue">
        @Html.LabelFor(e => e.ID)
        @Html.TextBoxFor(e => e.ID, new { @readonly = "readonly", @class = "form-control" })
    </div>

    <div class="mt-2" style="color:darkblue">
        @Html.LabelFor(e => e.name)
        @Html.TextBoxFor(e => e.name, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.name)
    </div>

    <div class="mt-2" style="color:darkblue">
        @Html.LabelFor(e => e.location)
        @Html.TextBoxFor(e => e.location, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.location)
    </div>

    <div>
        <button class="mt-2" style="background-color: darkblue; color:lightblue" type="submit">Update Event!</button>
    </div>
}

