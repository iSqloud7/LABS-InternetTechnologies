@model Albums.Models.Store

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Store</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.storeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.storeName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.storeAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.storeAddress)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.storeID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<h2>List of albums in store: </h2>

<ul>
    @foreach (Albums.Models.Album album in Model.albums)
     {
        <li>
            <a href="~/Albums/Details/@album.albumID">@album.albumName</a>
        </li>
     }
</ul>